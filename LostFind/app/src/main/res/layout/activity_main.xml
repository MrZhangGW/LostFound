<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mian_bgcolor"
    tools:context="com.mrzhang.lostfind.Activity.MainActivity">

    <Button
        android:id="@+id/but_login"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="306dp"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="33dp"
        android:background="@drawable/sign_button"
        android:layout_above="@+id/but_regist"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/but_regist"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="注册"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="377dp"
        tools:ignore="HardcodedText,MissingConstraints"
        android:background="@drawable/sign_button"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"

        android:layout_alignStart="@+id/but_login" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户账户"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="60dp"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_above="@+id/edit_psw"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="45dp" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="HardcodedText,LabelFor,MissingConstraints"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="52dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户密码"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="150dp"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginStart="26dp"
        android:layout_above="@+id/but_login"
        android:layout_alignStart="@+id/but_login"
        android:layout_marginBottom="34dp" />

    <EditText
        android:id="@+id/edit_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:ignore="LabelFor,MissingConstraints"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/edit_username" />

    <com.thinkcool.circletextimageview.CircleTextImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:src="@mipmap/item_headimg"
        tools:ignore="ContentDescription" />

</RelativeLayout>
